
<button class="btn btn-outline-dark p-2 mb-2 col-12 shadow " @onclick="Show"><b>Next Random Quotes</b></button>
<div class="d-flex bd-highlight">
    <div class="d-flex flex-wrap">
        @foreach (var quote in _quotesList)
        {
            <div class="col-xxl-3 col-xl-3 col-lg-4 col-md-6 col-sm-12">
                <div class="m-1 shadow ">
                    <div class="card" style="font-family: Gloria Hallelujah; font-size: 28px">
                        <div class="card-body">
                            <span style="font-size: 40px">"</span>@quote.Description<span style="font-size: 40px">"</span>
                        </div>
                        <div class="card-footer text-end">- @quote.Title</div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
